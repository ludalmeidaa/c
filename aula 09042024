// CONTANDO DE 0 ATE 10

#include <stdio.h>

int main() {
  int cont = 0;

  printf("contando de 0 ate 10 \n");

  while (cont <= 20) {
    printf("%2d\n", cont);

    cont = cont + 1;
    sleep(1);
  }
  printf("Terminei de contar!\n");
  return 0;
}

// CONTANDO NUMEROS PARES DE 0 A 20

#include <stdio.h>

int main() {
  int cont = 1;
  printf("contando os números pares de 0 a 20 \n");

  while (cont <= 20) {
    if (cont % 2 == 0) {
      printf("%d \n", cont);
      sleep(1);
    }

    cont++;
  }

  printf("\nAcabou!");
}

// TABUADA

#include <stdio.h>

int main() {
  int cont = 1;
  int tab, x = 0;

  printf("Qual tabuada você quer ver?\n");
  scanf("%d", &tab);
  printf("=====================\n");

  while (x < 1) {

    while (cont <= 10) {
      printf("%d x %2d = %2d\n", tab + x, cont, (tab + x) * cont);
      cont = cont + 1;
    }
    cont = 1;
    printf("=====================\n");

    x++;
  }
  return 0;
}
